{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@content/*": ["src/content/*"],
            "@i18n/*": ["src/i18n/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@styles/*": ["src/styles/*"]
        }
    }
}
