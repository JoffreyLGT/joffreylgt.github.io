---
import { getLangFromUrl, useTranslations } from "@i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const currentYear = new Date().getFullYear()
---

<footer
    class="mt-auto flex flex-col flex-wrap gap-12 px-8 py-12 text-center text-sm
    text-t_gray-400 laptop:flex-row laptop:justify-between laptop:px-6 laptop:py-10"
>
    <p>
        {t("footer.quote")}
    </p>
    <div
        class="flex flex-col justify-center gap-8 sm:flex-row laptop:justify-end"
    >
        <p class="author">
            &copy; {currentYear} Joffrey Lagut
        </p>
    </div>
</footer>
