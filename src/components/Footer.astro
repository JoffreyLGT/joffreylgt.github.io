---
import { getLangFromUrl, useTranslations } from "@i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const currentYear = new Date().getFullYear()
---

<footer
    class="flex flex-col gap-12 mt-auto px-8 py-12 lg:py-10 lg:px-20 text-center text-sm lg:justify-between lg:flex-row lg:justify-between lg:py-10 lg:px-20"
>
    <div class="flex flex-col gap-2 lg:flex-row lg:gap-4 lg:flex-wrap">
        <p>
            {t("footer.quote")}
        </p>
    </div>
    <p class="text-center lg:text-end">
        &copy; {currentYear} Joffrey Lagut
    </p>
</footer>
<style>
    footer {
        @apply text-slate-500 dark:text-slate-500;
    }
</style>
