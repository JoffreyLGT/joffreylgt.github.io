---
import {
    getLangFromUrl,
    useTranslations,
    useTranslatedPath,
    getSlugWithoutLang,
    getLangFromSlug,
    formatDateRespectingLang,
} from "@i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)

import Pill from "@components/Pill.astro"
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"

interface Props {
    post: CollectionEntry<"blog">
}

const { data, slug } = Astro.props.post
---

<article class="flex flex-col items-start justify-between m-1 w-full">
    <div class="flex flex-row w-full gap-8">
        <div class="aspect-video flex-none">
            <Image
                src={data.img}
                alt={data.img_alt}
                width={300}
                class="rounded-2xl"
            />
        </div>
        <div>
            <div class="flex items-center gap-x-4 text-sm">
                <time
                    datetime={data.publishDate.toISOString().split("T")[0]}
                    class="text-gray-500"
                    >{formatDateRespectingLang(data.publishDate, lang)}</time
                >
                {
                    data.tags.map((tag) => (
                        <Pill
                            size="sm"
                            class="relative z-10 rounded-full bg-purple-100 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"
                        >
                            {tag}
                        </Pill>
                    ))
                }
            </div>
            <div class="flex-grow group relative">
                <h3
                    class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
                >
                    <a
                        href={translatePath(`/blog/${slug}`)}
                        class="mt-3 text-lg font-semibold leading-6 group-hover:text-purple-500"
                    >
                        <span class="absolute inset-0"></span>
                        {data.title}
                    </a>
                </h3>
                <p class="mt-6 line-clamp-3 text-sm leading-6 text-gray-600">
                    {data.description}
                </p>
            </div>
        </div>
    </div>
</article>

<style>
    .card {
        display: grid;
        grid-template: auto 1fr / auto 1fr;
        height: 11rem;
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        text-decoration: none;
        font-family: var(--font-brand);
        font-size: var(--text-lg);
        font-weight: 500;
        transition: box-shadow var(--theme-transition);
    }

    .card:hover {
        box-shadow: var(--shadow-md);
    }

    .title {
        grid-area: 1 / 1 / 2 / 2;
        z-index: 1;
        margin: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--gray-999);
        color: var(--gray-200);
        border-radius: 0.375rem;
    }

    img {
        grid-area: 1 / 1 / 3 / 3;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @media (min-width: 50em) {
        .card {
            height: 22rem;
            border-radius: 1.5rem;
        }

        .title {
            border-radius: 0.9375rem;
        }
    }
</style>
