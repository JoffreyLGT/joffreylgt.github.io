---
import {
    getLangFromUrl,
    useTranslations,
    useTranslatedPath,
    getSlugWithoutLang,
    getLangFromSlug,
    formatDateRespectingLang,
} from "@i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)

import Pill from "@components/Pill.astro"
import type { CollectionEntry } from "astro:content"
import { Image } from "astro:assets"

interface Props {
    post: CollectionEntry<"blog">
}

const { data, slug } = Astro.props.post
---

<article
    class="group m-1 flex w-full flex-col items-start justify-between transition-all duration-300 ease-in-out"
>
    <a href={translatePath(`/blog/${slug}`)}>
        <div class="flex w-full flex-row gap-8">
            <div class="aspect-video flex-none">
                <Image
                    src={data.img}
                    alt={data.img_alt}
                    width={300}
                    class="rounded-2xl"
                />
            </div>
            <div>
                <div class="flex items-center gap-x-4 text-sm">
                    <time
                        datetime={data.publishDate.toISOString().split("T")[0]}
                        class="text-gray-500"
                        >{
                            formatDateRespectingLang(data.publishDate, lang)
                        }</time
                    >
                    {
                        data.tags.map((tag) => (
                            <Pill
                                size="sm"
                                class="relative z-10 rounded-full bg-purple-100 px-3 py-1.5 font-medium text-purple-700"
                            >
                                {tag}
                            </Pill>
                        ))
                    }
                </div>
                <div class="relative flex-grow">
                    <h3
                        class="relative mt-3 max-w-fit text-xl font-semibold leading-6 text-gray-900 after:absolute after:bottom-[-3px] after:left-0 after:-z-10 after:block after:h-[5px] after:w-full after:origin-top-left after:scale-x-0 after:rounded-full after:bg-purple-300 after:transition after:duration-300 after:ease-in-out after:content-[''] after:group-hover:scale-x-100"
                    >
                        <span class="absolute inset-0"></span>
                        {data.title}
                    </h3>
                    <p
                        class="mt-6 line-clamp-3 text-sm leading-6 text-gray-600"
                    >
                        {data.description}
                    </p>
                </div>
            </div>
        </div>
    </a>
</article>
